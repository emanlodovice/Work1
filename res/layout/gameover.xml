<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="100" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Over"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:layout_weight="40"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <LinearLayout 
        android:layout_weight="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        
        android:weightSum="100"
        android:padding="5dp">
	    <ImageView
	        android:layout_width="100dp"
	        android:layout_height="175dp"
	        android:src="@drawable/workpig"
	        android:layout_weight="40" />
	    <LinearLayout 
	        android:orientation="vertical"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="60">
	        <LinearLayout 
	            android:layout_width = "wrap_content"
	            android:layout_height = "wrap_content"
	            android:orientation="horizontal">
	            <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:padding="5dp"
	                android:orientation="vertical">
				    <LinearLayout
				        android:orientation="horizontal"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content">
					    <ImageView
					        android:layout_width="40dp"
					        android:layout_height="40dp"
					        android:src="@drawable/burger" />
					    
					    <TextView 
					        android:id="@+id/tvBurgerCount"
					        android:layout_width="wrap_content"
					        android:layout_height="40dp"
					        android:text=" = 0"
					        android:textSize="30dp"/>
				    </LinearLayout>
				    <LinearLayout
		                android:orientation="horizontal"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content">
		                <ImageView
		                    android:layout_width="40dp"
		                    android:layout_height="40dp"
		                    android:src="@drawable/cake" />
		                
		                <TextView 
		                    android:id="@+id/tvCakeCount"
		                    android:layout_width="wrap_content"
		                    android:layout_height="40dp"
		                    android:text=" = 0"
		                    android:textSize="30dp"/>
		            </LinearLayout>
		            <LinearLayout
		                android:orientation="horizontal"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content">
		                <ImageView
		                    android:layout_width="40dp"
		                    android:layout_height="40dp"
		                    android:src="@drawable/hotdog" />
		                
		                <TextView 
		                    android:id="@+id/tvHotdogCount"
		                    android:layout_width="wrap_content"
		                    android:layout_height="40dp"
		                    android:text=" = 0"
		                    android:textSize="30dp"/>
		            </LinearLayout>
		        </LinearLayout>
		        <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/pie" />
                        
                        <TextView 
                            android:id="@+id/tvPieCount"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text=" = 0"
                            android:textSize="30dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/pizza" />
                        
                        <TextView 
                            android:id="@+id/tvPizzaCount"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text=" = 0"
                            android:textSize="30dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/drumstick" />
                        
                        <TextView 
                            android:id="@+id/tvDrumstickCount"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text=" = 0"
                            android:textSize="30dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
		    <LinearLayout 
		        android:orientation="horizontal"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content">
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height = "40dp"
		            android:text = "Score = "
		            android:textSize="30dp" />
		        <TextView 
		            android:id="@+id/tvScore"
		            android:layout_width="wrap_content"
		            android:layout_height="40dp"
		            android:text = "0"
		            android:textSize="30dp"/>
		            
		    </LinearLayout>
	    </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_weight="40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
	    <Button 
	        android:id="@+id/bRestart"
	        android:layout_width="100dp"
	        android:layout_height="40dp"
	        android:layout_gravity="center"
	        android:text="Restart"/>
	    <Button 
            android:id="@+id/bMenu"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="Menu"/>
    </LinearLayout>

</LinearLayout>